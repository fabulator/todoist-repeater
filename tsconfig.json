{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "src/*",
        "tests/*"
      ]
    },
    "outDir": "./build",
    "lib": ["es6", "dom", "esnext"],
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "strict": true
  },
  "include": [
    "src/**/*"
  ],
  "files": [
    "./src/types/declarations.d.ts"
  ]
}
